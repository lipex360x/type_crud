import { v4 as uuid } from 'uuid'

import {
  Entity,
  Column,
  PrimaryColumn,
  CreateDateColumn,
  UpdateDateColumn,
  DeleteDateColumn
} from 'typeorm'

@Entity('{{camelCase name}}s')
export default class {{pascalCase name}} {
  @PrimaryColumn('uuid')
    id: string

  @Column()
    data: string

  @CreateDateColumn()
    created_at: Date

  @UpdateDateColumn()
    updated_at: Date

  @DeleteDateColumn()
    deleted_at: Date

  constructor() {
    if (!this.id) this.id = uuid()
  }
}
